<div class='container'>
    <!-- <form action="/signup" method="POST"> -->
        <div class="form-group" >
            <label for="name">닉네임</label>
            <input type="name" class="form-control" id="name" aria-describedby="emailHelp"
                placeholder="닉네임">
            <small id="emailHelp" class="form-text text-muted">최소 3자 이상, 알파벳 대소문자(a~z, A~Z), 숫자(0~9)</small>
        </div>
        <div class="form-group">
            <label for="password">비밀번호</label>
            <input type="password" class="form-control" id="password" placeholder="Password">
            <small id="emailHelp" class="form-text text-muted">최소 4자 이상이며, 닉네임과 같은 값이 포함된 경우 회원가입에 실패</small>
        </div>
            <div class="form-group">
                <label for="confirmPassword">비밀번호 확인</label>
                <input type="password" class="form-control" id="confirmPassword" placeholder="Password">
                <small id="emailHelp" class="form-text text-muted">비밀번호가 일치해야 합니다.</small>
            </div>

        <button type="button" id= "button" class="btn btn-primary" onclick="location.href='/login'">Submit</button>
    <!-- </form> -->
</div>
<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
    crossorigin="anonymous"></script>
<script>

    const btn = document.querySelector("#button")
    btn.addEventListener('click',sign_up)
    function sign_up() {
        const name = $("#name").val();
        const password = $("#password").val();
        const confirmPassword = $("#confirmPassword").val();
        if (password === confirmPassword){
        $.ajax({
            type: "POST",
            url: "/signup",
            data: {
                name: name,
                password: password,
                confirmPassword: confirmPassword,
            },
            success: function (response) {
                alert("회원가입을 축하드립니다!")
                    window.location.replace('/')
                }
            })
            } else {
    alert('비밀번호가 다릅니다.')}
}
        
    </script>



